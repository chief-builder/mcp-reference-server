# MCP Reference Server Configuration
# Copy this file to .env and update values as needed

# ===================
# Server Configuration
# ===================

# Network settings
MCP_HOST=0.0.0.0
MCP_PORT=3000

# Transport mode: stdio | http | both
MCP_TRANSPORT=both

# Enable stateless HTTP mode (no session state)
MCP_STATELESS_MODE=false

# Default pagination size (1-1000)
MCP_PAGE_SIZE=50

# ===================
# Timeouts
# ===================

# Request timeout in milliseconds
MCP_REQUEST_TIMEOUT_MS=60000

# Graceful shutdown timeout in milliseconds
MCP_SHUTDOWN_TIMEOUT_MS=30000

# Progress notification throttle in milliseconds
MCP_PROGRESS_INTERVAL_MS=100

# ===================
# Debug & Logging
# ===================

# Enable debug mode
MCP_DEBUG=false

# Log level: debug | info | notice | warning | error | critical | alert | emergency
MCP_LOG_LEVEL=info

# ===================
# Auth0 Authentication
# ===================

# Auth0 tenant domain (e.g., example.auth0.com)
MCP_AUTH0_DOMAIN=

# Auth0 API audience (e.g., https://api.example.com)
MCP_AUTH0_AUDIENCE=

# Auth0 client ID
MCP_AUTH0_CLIENT_ID=

# Machine-to-machine client secret
MCP_M2M_CLIENT_SECRET=

# ===================
# Security
# ===================

# Cursor secret for pagination HMAC validation (required, min 32 chars)
# Generate with: openssl rand -base64 32
MCP_CURSOR_SECRET=zgjXFjqMNELaV+ZmkC9J3vvXMq0Bi23oJ4W3eomrQY0=

# ===================
# Observability
# ===================

# OpenTelemetry OTLP exporter endpoint (e.g., http://localhost:4318)
OTEL_EXPORTER_OTLP_ENDPOINT=
